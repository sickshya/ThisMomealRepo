<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.doeat.common.mapper.BoardMapper">

<!-- faq 전체리스트 출력 -->
	<select id="faqList" resultType="co.doeat.common.service.BoardVO">
		SELECT * FROM BOARD ORDER BY NO DESC
	</select>
	
<!-- faq 단건조회 -->
	<select id="faqSelect" resultType="co.doeat.common.service.BoardVO">
		SELECT * FROM BOARD 
		WHERE USER_ID = 'ADMIN'
	</select>

<!-- faq 추가 -->	
	<insert id="faqInsert" parameterType="co.doeat.common.service.BoardVO">
		<selectKey keyProperty="userId" resultType="int" order="BEFORE">
			SELECT * MAX(USER_ID)+1 FROM BOARD
		</selectKey>
		INSERT INTO BOARD
		VALUES(#{no}, #{boardTitle}, #{boardSubject}, #{boardDate}, 0, #{boardHit}, #{boardCode}, #{userId} )
	</insert>

<!-- faq 수정 -->
	<update id="faqUpdate" parameterType="co.doeat.common.service.BoardVO">
		UPDATE BOARD
		SET
		BOARD_TITLE = #{boardTitle},
		BOARD_SUBJECT = #{boardSubject},
	</update>
	
	<delete id="faqDelete">
		
	</delete>
	

</mapper>