<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.doeat.management.mapper.LikesMapper">

	<!-- 마이페이지 - 좋아요 리스트 출력 -->
	<select id="myLikeList" resultType="map">
		SELECT U.*, L.*, M.*
		FROM
		USERS U LEFT JOIN LIKES L ON (U.USER_ID = L.USER_ID)
		LEFT JOIN MEALS M
		ON (L.USER_ID = M.USER_ID)
		WHERE U.USER_ID = 'user3'
	</select>

	<delete id="myLikeDel"
		parameterType="co.doeat.management.service.LikesVO">
		DELETE FROM LIKES
		WHERE no = #{no}
	</delete>


	<select id="mylikeSelect" resultType="map">

	</select>
</mapper>